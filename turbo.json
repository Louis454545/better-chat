{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"],
			"env": [
				"CONVEX_DEPLOYMENT",
				"CLERK_SECRET_KEY", 
				"CLERK_FRONTEND_API_URL",
				"NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
				"NEXT_PUBLIC_CONVEX_URL"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:setup": {
			"cache": false,
			"persistent": true
		}
	}
}
